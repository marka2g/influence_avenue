<div class="donations-containe min-w-max">
  
  <.live_component module={InfluenceAvenueWeb.FilterComponent} id="filter" filter={@filter} />

  <.table id="donations" rows={@donations}>
    <:col 
      :let={donation} 
      label="#"
      sort_key={:id}
      sort_type="id"
      width_class="w-1/16"
      sorting={@sorting}
    >
      <%= donation.id %>
    </:col>
    <:col 
      :let={donation} 
      label="$"
      sort_key={:amount}
      sort_type="amount"
      width_class="w-1/16"
      sorting={@sorting}
    >
      <%= Money.new(donation.amount, :USD) %>
    </:col>
    <:col
      :let={donation} 
      label="Corporation"
      sort_key={:corpname}
      sort_type="corpname"
      width_class="w-5/16"
      sorting={@sorting}
    >
      <%= donation.corpname %>
    </:col>
    <:col 
      :let={donation} 
      label="Party"
      sort_key={:recipient_party}
      sort_type="recipient_party"
      width_class="w-1/16"
      sorting={@sorting}
    >
      <%= party(donation.recipient_party) %>
    </:col>
    <:col 
      :let={donation} 
      label="Year"
      sort_key={:cycle}
      sort_type="cycle"
      width_class="w-1/16"
      sorting={@sorting}
    >
      <%= donation.cycle %>
    </:col>
    <:col 
      :let={donation} 
      label="Donor"
      sort_key={:contributor_name}
      sort_type="contributor_name"
      width_class="w-2/16"
      sorting={@sorting}
    >
      <%= donation.contributor_name %>
    </:col>
    <:col 
      :let={donation} 
      label="Position"
      sort_key={:contributor_occupation}
      sort_type="contributor_occupation"
      width_class="w-2/16"
      sorting={@sorting}
    >
      <%= occupation(donation.contributor_occupation) %>
    </:col>
    <:col 
      :let={donation} 
      label="Recipient"
      sort_key={:recipient_name}
      sort_type="recipient_name"
      width_class="w-2/16"
      sorting={@sorting}
    >
      <%= donation.recipient_name %>
    </:col>
  </.table>
</div>
